FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER $APP_UID
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY . . 
RUN dotnet restore "PlayCodeApi.Proxy/PlayCodeApi.Proxy.csproj"
WORKDIR /src/PlayCodeApi.Proxy
RUN dotnet build "PlayCodeApi.Proxy.csproj" -c Release -o /app

FROM build AS publish
WORKDIR /src/PlayCodeApi.Proxy
RUN dotnet publish "PlayCodeApi.Proxy.csproj" -c Release -o /app /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "PlayCodeApi.Proxy.dll"]
